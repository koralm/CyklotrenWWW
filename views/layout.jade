doctype html
html
  head
    title CyklotrenWWW

    //Main CSS
    link(rel='stylesheet', href='/stylesheets/style.css')

    //Material bootstrap CSS
    link(rel='stylesheet', href='/bootstrap-material-design-master/dist/css/bootstrap-material-design.css')
    link(rel='stylesheet', href='/bootstrap-material-design-master/dist/css/ripples.css')

  body(data-path='<%= path %>')
    // Fixed navbar
    nav.navbar.navbar-inverse.navbar-fixed-top
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/')
            strong Inerion - CyklotrenWWW
        .collapse.navbar-collapse.navbarCollapse
          ul#menu.nav.navbar-nav.navbar-right
            li#inf
              a(href='informacje') Informacje
            li.divider
            li#reg
              a(href='rejestracja') Zarejestruj się
            li#log
              a(href='logowanie') Zaloguj się
    block content

  //BOTTOM MAIN SCRIPTS
  //JQUERY
  script(src='/jquery/dist/jquery.js')
  //BOOTSTRAP
  script(src='bootstrap-sass/assets/javascripts/bootstrap.js')
  //MATERIAL BOOTSTRAP
  script(src='bootstrap-material-design-master/dist/js/material.js')
  script(src='bootstrap-material-design-master/dist/js/ripples.js')
  //INIT MATERIAL DESIGN
  script.
    $.material.init()

  script.
    $( document ).ready(function() {
      $(function () {
        var path = $('#IDX').attr('data-path');
        $('#' + path).addClass('active');
      });
    });
