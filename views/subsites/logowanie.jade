extends ../layout


block content
    .container#IDX(data-path='log')
        .text-center
            h1 Strona logowania
                p.lead Podaj swój login i hasło
                br
                form.login(role='form', action="/logowanie",method="post", style='max-width: 300px;')
                    .form-group
                        input.form-control(type='text', name="username", placeholder='nazwa użytkownika')
                    .form-group
                        input.form-control(type='password', name="password", placeholder='hasło')
                    button.btn.btn-default(type='submit') Zaloguj
                    nbsp
                    a(href='/')
                        button.btn.btn-primary(type="button") Anuluj